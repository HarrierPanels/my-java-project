pipeline {
    agent {
        label 'local1'
    }
    //environment {
      //  AWS_CREDS = credentials('aws-creds')
    //}
    stages {
        stage('Example AWS') {
            steps {
                sh 'aws --version'
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY',
                    credentialsId: 'aws-creds'
                ]]) {
                sh 'aws ec2 describe-instances'
                }
                sh 'aws ec2 describe-instances'
            }
        }
    }
}
